extends layout

block content
    h3= title
    div.table-responsive
        form#createOrder(action='create_payment_url', method='POST')
            div.form-group
                lable Mã OrderID
                input.form-control#amount(name='orderId', placeholder='Mã orderId')
            div.form-group
                label Chọn Phương thức thanh toán:
                label.control-label
                div.controls
                    label.radio-inline
                         input(type="radio", name="bankCode", id="defaultPaymentMethod", value="", checked="true")
                        | Cổng thanh toán VNPAYQR
                    label.radio-inline
                        input(type="radio", name="bankCode", id="vnpayqrPaymentMethod", value="VNPAYQR")
                        | Thanh toán qua ứng dụng hỗ trợ VNPAYQR
                    label.radio-inline
                        input(type="radio", name="bankCode", id="vnbankPaymentMethod", value="VNBANK") 
                        | Thanh toán qua ATM-Tài khoản ngân hàng nội địa
                    label.radio-inline
                        input(type="radio", name="bankCode", id="intcardPaymentMethod", value="INTCARD") 
                        | Thanh toán qua thẻ quốc tế

            div.form-group
                label Ngôn ngữ
                label.control-label
                div.controls
                    label.radio-inline
                        input(type="radio", name="locale", id="vnLanguage", value="vn", checked="true") 
                        |Tiếng việt
                    label.radio-inline
                        input(type="radio", name="locale", id="enLanguage", value="en") 
                        | Tiếng anh

            button.btn.btn-default#btnPopup(type='submit') 
            |Thanh toán

    // Nếu bạn muốn thêm một khoảng trống, bạn có thể tạo thẻ <p> trống
    p
