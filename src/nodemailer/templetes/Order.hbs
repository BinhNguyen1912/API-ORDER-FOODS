<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
  </head>
  <body>
    <b>Thông tin khách hàng</b>
    <div class='info'>
      <p>Tên khách hàng : {{name}}</p>
      <p>Số điện thoại: {{phone}}</p>
      <p>Email: {{email}}</p>
      <p>Địa chỉ: {{address}}</p>
      <p>Mã đơn hàng : <b>{{orderId}}</b></p>
      <p>Thời gian {{time}}</p>
      <p>Phương thức thanh toán : {{paymentMethod}}</p>
      <p>Trạng thái : {{status}}</p>
    </div>
    <table class='foods'>
      <thead>
        <tr>
          <th>STT</th>
          <th>Tên món ăn</th>
          <th>Đơn giá</th>
          <th>Số lượng</th>
          <th>Thành tiền</th>
        </tr>
      </thead>
      <tbody>
        {{#each foodItem}}
          <tr>
            <td>{{inc @index}}</td>
            <td style='float: left;'>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quality}}</td>
            <td>{{this.total}}</td>
          </tr>
        {{/each}}
        <tr style='font-weight: 700;color: black; border-top: 1px solid'>
          <td colspan='4'>Tổng cộng : </td>
          <td>{{totalPrice}}</td>
        </tr>
        <tr style='font-weight: 700;color: black; border-top: 1px solid'>
          <td colspan='4'>Giảm từ Voucher : </td>
          <td>{{discountAmount}}</td>
        </tr>
        <tr style='font-weight: 700;color: black; border-top: 1px solid'>
          <td colspan='4'>Tổng tiền</td>
          <td>{{finalPrice}}</td>
        </tr>
      </tbody>
    </table>
  </body>
  <style>
    img { width: 200px; height: 170px; } .infoShop { width: 500px; } .info { margin-top: -44px; } .info p { margin: 5px;
    } table { max-width: fit-content;} .total { text-align: right; } th { border-bottom: 1px solid; border-top: 1px
    solid; padding: 7px; } td { padding: 5px; } .foods { text-align: center; width: 500px; margin-top: 20px;
    border-collapse: collapse; }

  </style>
</html>