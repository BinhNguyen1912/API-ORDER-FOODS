<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
  </head>
  <body>
    <table class='infoShop'>
      <tr>
        <td><h3>BINHNGUYEN</h3></td>
        <td><img
            src='https://media.istockphoto.com/id/1347903722/photo/carnival-or-carnaval-gold-colorful-glitter-texture-font.webp?a=1&b=1&s=612x612&w=0&k=20&c=d_vF8h-54pWCslFCxdlWycd8xUZGeg8TdlEgV_ATbK8='
            alt=''
          /></td>
      </tr>
    </table>
    <b>Thông tin khách hàng</b>
    <div class='info'>
      <p>Tên khách hàng : {{name}}</p>
      <p>Số điện thoại: {{phone}}</p>
      <p>Email: {{email}}</p>
      <p>Địa chỉ: {{address}}</p>
      <p>Mã đơn hàng : <b>{{orderId}}</b></p>
      <p>Thời gian {{time}}</p>
    </div>
    <table class='foods'>
      <thead>
        <tr>
          <th>Mã món ăn</th>
          <th>Tên món ăn</th>
          <th>Đơn giá</th>
          <th>Số lượng</th>
          <th>Thành tiền</th>
        </tr>
      </thead>
      <tbody>
        {{#each foodItem}}
          <tr>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quality}}</td>
            <td>{{this.total}}</td>
          </tr>
        {{/each}}
        <tr style='font-weight: 700;color:red; border-top: 1px solid'>
          <td colspan='4'>Tổng tiền</td>
          <td>{{totalPrice}}</td>
        </tr>
      </tbody>
    </table>
  </body>
  <style>
    img { width: 200px; height: 170px; } .infoShop { width: 500px; } .info { margin-top: -44px; } .info p { margin: 5px;
    } .total { text-align: right; } th { border-bottom: 1px solid; border-top: 1px solid; padding: 7px; } td { padding:
    5px; } .foods { text-align: center; width: 500px; margin-top: 20px; border-collapse: collapse; }

  </style>
</html>